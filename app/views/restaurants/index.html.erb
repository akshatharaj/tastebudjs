<h1 class="listing_heading">Restaurant Listing</h1>
<div id="search">
  <%= render :partial => 'restaurants/search' %>
</div>

<table class="hovertable">
    <tr>
        <th>Name     </th>
        <th>Phone    </th>
        <th>Address </th>
        <th>City     </th>
        <th>State    </th>
        <th>Zip      </th>
    </tr>

<% @restaurants.each do |restaurant| %>
    <tr>
        <td><%= link_to restaurant.name, restaurant %></td>
        <td><%=h restaurant.phone  %></td>
        <td><%=h restaurant.address1 %></td>
        <td><%=h restaurant.city    %></td>
        <td><%=h restaurant.state  %></td>
        <td><%=h restaurant.zip %></td>
    </tr>
<% end %>
</table>
<br />
<%= will_paginate @restaurants %>
<br />
<a href="<%= url_for(:action => 'new', :controller => 'restaurants') %>"> Don't see the restaurant listed? Add it! </a>
<br />

<div class="add_restaurant">
  <%= render "new", :@restaurant => Restaurant.new %>
</div>
