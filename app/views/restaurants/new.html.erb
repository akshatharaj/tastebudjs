<div class="user_review">
  <h1> Please enter restaurant information </h1>
  <br />
  <%= form_for @restaurant do |f| -%>
       <label>Name:</label> <%= f.text_field :name %> <br />
       <label>Phone:</label> <%= f.text_field :phone %> <br />
       <label>Address Line 1:</label> <%= f.text_field :address1 %> <br />
       <label>Address Line 2:</label> <%= f.text_field :address2 %> <br />
       <label>City:</label> <%= f.text_field :city %> <br /> 
       <label>Zip:</label> <%= f.text_field :zip %> <br /> 
       <label>State:</label> <%= f.text_field :state %> <br /> 
       <label>Comments:</label> <%= f.text_field :other_comments %> <br /> 
       <%= f.submit %>
  <% end -%>
   <br />
   <a href="<%= url_for(:action => 'index', :controller => 'restaurants') %>"> Back to Restaurant Listing </a>
   <br/>
</div>
