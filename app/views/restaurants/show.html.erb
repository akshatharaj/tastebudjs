<div class="objectdetail">
  <h1><%= @restaurant.name %></h1>
  <p><strong>Phone: </strong> <%= @restaurant.phone %><br />
   <%= @restaurant.address1 %>
   <%= @restaurant.address2 %><br />
   <%= @restaurant.city %>
   <%= @restaurant.state %>
   <%= @restaurant.zip %><br />
   <br />
   <a class="links" id="view_reviews" href="#"> View Reviews </a>

   <div id="reviews_listing">
      <%= render "reviews/index", :@reviews => @restaurant.reviews.paginate(:page => params[:page], :per_page => 10).order('id DESC') %>
   </div>
   <a class="links" href="<%= url_for(:action => 'index', :controller => 'restaurants') %>"> Back to full restaurant listing </a>   
</div>
