<%= form_for [@restaurant, @review], :html => {:id => 'add_review_form'}, :remote => true do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :restaurant_id, :value => @restaurant.id %>
  </div>
  <div class="field">
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>
  <div class="field">
    <%= f.label :rating %><br />
    <%= f.select( :rating, options_for_select([['Certainly Not worth a second visit', 1], ['Average food and service', 2], 
                            ['Good food, worth the money', 3], ['Definitely going back again', 4],
                            ['Best restaurant I have eaten at', 5]])) %>
  </div>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area(:comment, :size => '50x10') %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
